@model Proyecto_2___Paula_Ulate_Medrano.Models.Semilla
@using System.Collections.Generic

@{
    ViewBag.Title = "Editar Semilla";
    // Si quieres modo detalle/solo lectura en el futuro, puedes usar una bandera aquí.
}

<h1 class="h1-Index">Editar Semilla</h1>

<div class="form-container">
    <h1>Editar Semilla</h1>

    @using (Html.BeginForm("Edit", "Semilla", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)

        <label for="Nombre">Nombre:</label>
        @Html.TextBoxFor(m => m.Nombre, new { required = "required" })

        <label for="EspecieId">Especie:</label>
        @Html.DropDownListFor(m => m.EspecieId, (SelectList)ViewBag.Especies, "-- Seleccione --",
            new { @class = "form-control", required = "required" })

        <label for="UbicacionId">Ubicación:</label>
        @Html.DropDownListFor(m => m.UbicacionId, (SelectList)ViewBag.Ubicaciones, "-- Seleccione --",
            new { @class = "form-control", required = "required" })

        <label for="Cantidad">Cantidad:</label>
        @Html.TextBoxFor(m => m.Cantidad, new { type = "number", min = "0", required = "required" })

        <label for="FechaAlmacenamiento">Fecha de Almacenamiento:</label>
        @Html.TextBoxFor(m => m.FechaAlmacenamiento, "{0:yyyy-MM-dd}",
            new { type = "date", required = "required" })

        <div class="button-container">
            <button type="submit" class="button">Guardar</button>
            <a href="@Url.Action("Index","Semilla")" class="button">Cancelar</a>
        </div>
    }
    }
</div>