

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Proyecto 2 - Paula Ulate - Aplicación para Arca del Día Cero</title>

    @Styles.Render("~/Content/css")
    <link href="~/Content/Style.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
    @using Proyecto_2___Paula_Ulate_Medrano.Models
    @{
        var user = Session["UsuarioLogueado"] as Proyecto_2___Paula_Ulate_Medrano.Models.Usuario;
    }
</head>
<body>

    <header>
        <nav class="navbar">
            <div class="navbar-container">
                <span class="titulo-navbar">Proyecto 2 - Paula Ulate</span>

                <ul class="menu-navbar">
                    @if (user == null)
                    {
                        <li>@Html.ActionLink("Inicio", "Index", "Home", null, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Contacto", "Contact", "Home", null, new { @class = "nav-link" })</li>
                    }
                    else
                    {
                        if (user.Rol == "Administrador")
                        {
                            <li>@Html.ActionLink("Inicio", "Index", "Home", null, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Perfil Usuario", "Perfil", "Usuario", null, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Usuario Nuevo", "Create", "Usuario", null, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Usuarios Existentes", "Usuario_Index", "Usuario", null, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Contacto", "Contact", "Home", null, new { @class = "nav-link" })</li>

                            <li>@Html.ActionLink("Cerrar sesión", "CerrarSesion", "Home", null, new { @class = "nav-link" })</li>
                        }

                        if (user.Rol == "Usuario")
                        {
                            <li>@Html.ActionLink("Inicio", "Index", "Home", null, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Perfil Usuario", "Perfil", "Usuario", null, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Contacto", "Contact", "Home", null, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Cerrar sesión", "CerrarSesion", "Home", null, new { @class = "nav-link" })</li>
                        }


                    }
                </ul>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Proyecto 2 - Paula Ulate</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

