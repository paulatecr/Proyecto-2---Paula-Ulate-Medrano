@using Arca.Shared.Models
@{

    // Usuario de sesión
    var usuario = Session["UsuarioLogueado"] as Usuario;
    var logged = usuario != null;
    var rol = logged ? (usuario.Rol ?? "").Trim().ToLowerInvariant() : "";

}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Proyecto 2 - Paula Ulate - Aplicación para Arca del Día Cero</title>

    @Styles.Render("~/Content/css")
    <link href="~/Content/Style.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>
    <header>
        <nav class="navbar">
            <div class="navbar-container">
                <span class="titulo-navbar">Proyecto 2 - Paula Ulate</span>

                <ul class="menu-navbar">
                    @if (usuario == null)
                    {
                        <li>@Html.ActionLink("Inicio", "Index", "Home", null, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Contacto", "Contact", "Home", null, new { @class = "nav-link" })</li>
                    }
                    else
                    {
                        if (usuario.Rol == "Administrador")
                        {
                            <li>@Html.ActionLink("Inicio", "Index", "Home", null, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Perfil Usuario", "Perfil", "Usuario", null, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Usuario Nuevo", "Create", "Usuario", null, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Usuarios Existentes", "Index", "Usuario", null, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Gestión de Especies", "Index", "Especie", null, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Gestión de Semillas", "Index", "Semilla", null, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Inventario de Semillas", "Inventario", "Semilla", null, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Gestión de Ubicaciones", "Index", "Ubicacion", null, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Contacto", "Contact", "Home", null, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Cerrar sesión", "CerrarSesion", "Home", null, new { @class = "nav-link" })</li>
                        }

                        if (usuario.Rol == "Usuario")
                        {
                            <li>@Html.ActionLink("Inicio", "Index", "Home", null, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Perfil Usuario", "Perfil", "Usuario", null, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Gestión de Especies", "Index", "Especie", null, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Gestión de Semillas", "Index", "Semilla", null, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Inventario de Semillas", "Inventario", "Semilla", null, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Gestión de Ubicaciones", "Index", "Ubicacion", null, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Contacto", "Contact", "Home", null, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Cerrar sesión", "CerrarSesion", "Home", null, new { @class = "nav-link" })</li>
                        }


                    }
                </ul>

            <ul class="nav navbar-nav navbar-right">
                @if (logged)
                {
                    <li class="user-info">
                        <span class="navbar-text">
                            Hola, <strong>@(usuario.Nombre ?? usuario.UserId)</strong>
                            <small>(@usuario.Rol)</small>
                        </span>
                    </li>          
                }

            </ul>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Proyecto 2 - Paula Ulate</p>
        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@3.4.1/dist/js/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>