@model List<Arca.Shared.Models.Ubicacion>
@using System.Linq

@{
    ViewBag.Title = "Gestión de Ubicaciones";
    var usuarioSesion = Session["UsuarioLogueado"] as Arca.Shared.Models.Usuario;
    bool puedeEditar = usuarioSesion != null && usuarioSesion.Rol == "Administrador";
}

<h1 class="h1-Index">Gestión de Ubicaciones</h1>

@if (TempData["Mensaje"] != null)
{
    <p style="color: green; text-align: center;">@TempData["Mensaje"]</p>
}
@if (TempData["Error"] != null)
{
    <p style="color: red; text-align: center;">@TempData["Error"]</p>
}

@if (puedeEditar)
{
    <div class="button-container" style="margin-top: 20px;">
        @Html.ActionLink("Agregar Ubicación", "Create", "Ubicacion", null, new { @class = "button" })
    </div>
}

<br />
<div class="form-container">
    <div style="margin: 10px auto; text-align: center;">
        <label for="busqueda">Buscar por Nombre/Descripción/Condiciones:</label>
        <input type="text" id="busqueda" value="@ViewBag.Filtro" placeholder="Ingrese texto para filtrar" style="width: 80%;" />
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div id="datoTabla">
        <table id="tablaUbicaciones">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Condiciones</th>
                    @if (puedeEditar)
                    {
                        <th>Editar</th>
                        <th>Eliminar</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Nombre</td>
                        <td class="descripcion-columna">@item.Descripcion</td>
                        <td class="descripcion-columna">@item.Condiciones</td>
                        @if (puedeEditar)
                        {
                            <td>
                                <a href="@Url.Action("Edit", "Ubicacion", new { id = item.Id })" class="button" title="Editar">✏️</a>
                            </td>
                            <td>
                                <button class="button btn-eliminar" data-id="@item.Id" data-nombre="@item.Nombre">🗑️</button>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p style="text-align:center;">No hay ubicaciones registradas.</p>
}

<!-- Modal de Confirmación -->
<div id="modalConfirmacion" class="modal">
    <div class="modal-contenido">
        <h3>Confirmar eliminación</h3>
        <p id="textoModal"></p>
        <div style="text-align: center; margin-top: 20px;">
            <button class="button" id="btnConfirmarEliminar">Eliminar</button>
            <button class="button" onclick="cerrarModal()">Cancelar</button>
        </div>
    </div>
</div>

@section scripts {
    <script>
        // Filtro
        document.getElementById("busqueda").addEventListener("keyup", function () {
            var texto = this.value.toLowerCase();
            var filas = document.querySelectorAll("#tablaUbicaciones tbody tr");
            filas.forEach(function (fila) {
                var nombre = fila.cells[1].textContent.toLowerCase();
                var desc = fila.cells[2].textContent.toLowerCase();
                var cond = fila.cells[3].textContent.toLowerCase();
                fila.style.display = (nombre.includes(texto) || desc.includes(texto) || cond.includes(texto)) ? "" : "none";
            });
        });

        // Modal de eliminar
        let idSeleccionado = 0;
        document.querySelectorAll(".btn-eliminar").forEach(btn => {
            btn.addEventListener("click", function () {
                idSeleccionado = this.getAttribute("data-id");
                const nombre = this.getAttribute("data-nombre");
                document.getElementById("textoModal").textContent = `¿Desea eliminar la ubicación "${nombre}"?`;
                document.getElementById("modalConfirmacion").style.display = "block";
            });
        });

        document.getElementById("btnConfirmarEliminar").addEventListener("click", function () {
            window.location.href = "/Ubicacion/Eliminar/" + idSeleccionado;
        });

        function cerrarModal() {
            document.getElementById("modalConfirmacion").style.display = "none";
        }
    </script>
}