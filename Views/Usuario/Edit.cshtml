@using Arca.Shared.Models
@model Usuario

@{
    ViewBag.Title = "Editar Usuario";
}

<h2>Editar Usuario</h2>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

@using (Html.BeginForm("Edit", "Usuario", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => m.UserId, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.UserId, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.UserId, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Nombre, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Correo, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Correo, new { @class = "form-control", type = "email" })
            @Html.ValidationMessageFor(m => m.Correo, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Contrasena, new { @class = "control-label" })
            @Html.PasswordFor(m => m.Contrasena, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Contrasena, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Rol, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Rol, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Rol, "", new { @class = "text-danger" })
        </div>

        <div class="checkbox">
            <label>
                @Html.CheckBoxFor(m => m.Activo) Activo
            </label>
        </div>

        <div class="form-group" style="margin-top:12px;">
            <button type="submit" class="btn btn-success">Guardar cambios</button>
            @Html.ActionLink("Volver", "Index", "Usuario", null, new { @class = "btn btn-default", style = "margin-left:8px;" })
        </div>
    </div>
}