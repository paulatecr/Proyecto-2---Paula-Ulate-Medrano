@model List<Arca.Shared.Models.Usuario>
@using System.Linq

@{
    ViewBag.Title = "Usuarios Existentes";
    var usuarioSesion = Session["UsuarioLogueado"] as Arca.Shared.Models.Usuario;
    bool puedeEditar = usuarioSesion != null && usuarioSesion.Rol == "Administrador";
}

<h1 class="h1-Index">Usuarios Existentes</h1>

@if (TempData["Mensaje"] != null)
{
    <p style="color: green; text-align: center;">@TempData["Mensaje"]</p>
}
@if (TempData["Error"] != null)
{
    <p style="color: red; text-align: center;">@TempData["Error"]</p>
}

@if (puedeEditar)
{
    <div class="button-container" style="margin-top: 20px;">
        @Html.ActionLink("Crear Nuevo Usuario", "Create", "Usuario", null, new { @class = "button" })
    </div>
}
<br />

<div class="form-container">
    <div style="margin: 10px auto; text-align: center;">
        <label for="busqueda">Buscar por Usuario, Nombre o Rol:</label>
        <input type="text" id="busqueda" placeholder="Ingrese texto para filtrar" style="width: 80%;" />
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div id="datoTabla">
        <table id="tablaUsuarios">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Usuario</th>
                    <th>Nombre</th>
                    <th>Correo</th>
                    <th>Contraseña</th>
                    <th>Rol</th>
                    <th>Activo</th>
                    @if (puedeEditar)
                    {
                        <th>Editar</th>
                        <th>Eliminar</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.UserId</td>
                        <td>@item.Nombre</td>
                        <td>@item.Correo</td>
                        <td>@item.Contrasena</td>
                        <td>@item.Rol</td>
                        <td>@(item.Activo ? "Sí" : "No")</td>

                        @if (puedeEditar)
                        {
                            <td>
                                <a href="@Url.Action("Edit", "Usuario", new { id = item.Id })" class="button" title="Editar">✏️</a>
                            </td>
                            <td>
                                <button class="button btn-eliminar" data-id="@item.Id" data-nombre="@item.UserId">🗑️</button>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p style="text-align:center;">No hay usuarios registrados.</p>
}

<!-- Modal Confirmación -->
<div id="modalConfirmacion" class="modal">
    <div class="modal-contenido">
        <h3>Confirmar eliminación</h3>
        <p id="textoModal"></p>
        <div style="text-align: center; margin-top: 20px;">
            <button class="button" id="btnConfirmarEliminar">Eliminar</button>
            <button class="button" onclick="cerrarModal()">Cancelar</button>
        </div>
    </div>
</div>

@section scripts {
    <script>
        // Buscar
        document.getElementById("busqueda").addEventListener("keyup", function () {
            var texto = this.value.toLowerCase();
            var filas = document.querySelectorAll("#tablaUsuarios tbody tr");
            filas.forEach(function (fila) {
                var usuario = fila.cells[1].textContent.toLowerCase();
                var nombre = fila.cells[2].textContent.toLowerCase();
                var rol = fila.cells[5].textContent.toLowerCase();
                fila.style.display = (usuario.includes(texto) || nombre.includes(texto) || rol.includes(texto)) ? "" : "none";
            });
        });

        // Eliminar
        let idSeleccionado = 0;
        document.querySelectorAll(".btn-eliminar").forEach(btn => {
            btn.addEventListener("click", function () {
                idSeleccionado = this.getAttribute("data-id");
                const nombre = this.getAttribute("data-nombre");
                document.getElementById("textoModal").textContent = `¿Desea eliminar el usuario "${nombre}"?`;
                document.getElementById("modalConfirmacion").style.display = "block";
            });
        });

        document.getElementById("btnConfirmarEliminar").addEventListener("click", function () {
            window.location.href = "/Usuario/Eliminar/" + idSeleccionado;
        });

        function cerrarModal() {
            document.getElementById("modalConfirmacion").style.display = "none";
        }
    </script>
}